{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section 
        class="avatar" 
        style="background: url(../assets/{{member.name}}.jpg) no-repeat center center; background-size: cover;"
    ></section>
    <section class="details">
        <h3> Detalhes </h3>
        <div class="item">
            <div>Membro</div>
            <div>{{member.name}}</div>
        </div>
        <div class="item">
            <div>Dia de vencimento</div>
            <div>{{member.vencimento}}</div>
        </div>
        <div class="item">
            <div>Responsavel</div>
            <div>
                {{member.name_contato}}
                <!--{% for service in member.services %}
                    <span>{{service}}</span>
                {% endfor %} -->
                
            </div>
        </div>
        <div class="item">
            <div>Total de chip</div>
            <div>{{member.total_iot}}</div>
            <div>Desde</div>
            <div>{{member.created_at}}</div>
        </div>
        <a href="/members/{{ member.id }}/edit" class="button">Editar</a>
    </section>
</div>

{% endblock content%}