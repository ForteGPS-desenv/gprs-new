{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

    <div class="header">

        <a class="button" href="/members/create">Novo</a>
        <form action="/members" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Filtrar por nome"
                value="{{filter}}"
            >
            <button type="submit">Filtrar</button>

        </form>

    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Razão Social</th>
                <th>Chips</th>
                <th>Valor</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members%}

            <tr>
                <td>
                    <span class="avatar-member" 
                        style="background: url(../assets/fortegps.jpg);
                        background-size: cover;
                        width: 80px;
                        height: 80px;
                    "></span>
                </td>
                <td>{{member.name_contato}}</td>
                <td>{{member.total_iot}} </td>
                <td >{{member.valor_total}}</td>
                <td><a href="/members/{{member.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content%}